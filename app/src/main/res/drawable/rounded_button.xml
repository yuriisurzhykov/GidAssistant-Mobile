<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner_radius"/>
            <solid android:color="@color/gidassistant_primary"/>
            <padding android:bottom="@dimen/default_padding"
                android:left="@dimen/default_padding"
                android:right="@dimen/default_padding"
                android:top="@dimen/default_padding"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner_radius"/>
            <solid android:color="@color/gidassistant_light_gray"/>
            <padding android:bottom="@dimen/default_padding"
                android:left="@dimen/default_padding"
                android:right="@dimen/default_padding"
                android:top="@dimen/default_padding"/>
        </shape>
    </item>

</selector>