<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Base application colors -->
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/gidassistant_primary</item>
        <item name="colorAccent">@color/gidassistant_accent</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:statusBarColor">@color/gidassistant_transparent</item>
        <item name="android:textColor">@color/gidassistant_primary_text</item>
        <item name="android:textColorSecondary">@color/gidassistamt_secondary_text</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- Dialogs -->
        <item name="dialogTheme">@style/Widget.GidAssistant.Dialog</item>
        <item name="alertDialogTheme">@style/Widget.GidAssistant.Dialog.Alert</item>

        <item name="buttonStyle">@style/Widget.GidAssistant.Button</item>

        <item name="chipStyle">@style/Widget.GidAssistant.Chip</item>
        <item name="chipGroupStyle">@style/Widget.GidAssistant.ChipGroup</item>

        <item name="toolbarStyle">@style/Widget.GidAssistant.Toolbar</item>
        <item name="actionBarStyle">@style/Widget.GidAssistant.ActionBar</item>
        <item name="app_toolbarStyle">@style/Widget.GidAssistant.Toolbar</item>
        <item name="onboardingBackgroundColor">@color/onboardingBackgroundColor</item>
    </style>

    <style name="Widget"/>
    <style name="Widget.GidAssistant"/>
    <style name="Widget.GidAssistant.Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/gidassistamt_secondary_text</item>
        <item name="colorAccent">@color/gidassistant_accent</item>
    </style>

    <style name="Widget.GidAssistant.Dialog.Alert" parent="Widget.GidAssistant.Dialog">
    </style>

    <style name="Widget.GidAssistant.Toolbar" parent="Widget.AppCompat.ActionBar">

    </style>

    <style name="Widget.GidAssistant.ActionBar" parent="Widget.GidAssistant.Toolbar">

    </style>

    <style name="Widget.GidAssistant.Button">
        <item name="background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/gidassistamt_secondary_text</item>
        <item name="colorAccent">@color/gidassistant_accent</item>
        <item name="android:colorAccent">@color/gidassistant_accent</item>
        <item name="android:padding">10dp</item>
        <item name="paddingStart">25dp</item>
        <item name="paddingEnd">25dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.GidAssistant.Chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/gidassistant_chip_neutral</item>
        <item name="colorPrimary">@color/gidassistant_chip_pressed</item>
        <item name="colorOnSurface">@color/gidassistant_blue_light</item>
        <item name="android:textColor">@color/gidassistant_primary_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.GidAssistant.ChipGroup" parent="Widget.MaterialComponents.ChipGroup">
        <item name="singleLine">false</item>
        <item name="android:singleLine">false</item>
        <item name="android:gravity">center</item>
        <item name="chipStyle">@style/Widget.GidAssistant.Chip</item>
    </style>

</resources>